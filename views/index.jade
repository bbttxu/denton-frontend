extends layout

block append content
  #upcoming.upcoming.primary
    .calendar
      ul#calendar

  #featured.featured.primary
    .day(data-bind='css: classes')
      header
        h3
          span.day(data-bind='text: day') Day
          span.month(data-bind='text: month') Month
          span.date(data-bind='text: date') Date
      .content
        .prev(data-bind='if: prevDay')
          a.h1(data-bind='attr: { href: prevDayLink }') &laquo;
        .shows(data-bind='css: classes')
          // ko if: ( shows().length > 0 )
          ul.shows(data-bind='template: { name: "show-template", foreach: shows }')
          // /ko
          // ko ifnot: ( shows().length > 0 )
          p.loading Loading... Please Wait.
          // /ko
        .next(data-bind='if: nextDay')
          a.h1(data-bind='attr: { href: nextDayLink }') &raquo;


