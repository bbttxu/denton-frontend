            %span.date( data-bind="text: current_day" ) ???

          %a.menu( href="#/" ) &#9776;
      .content
        .prev
          %p &laquo;
        .shows
          %ul.shows.small-block-grid-1.large-block-grid-2(data-bind="template: { foreach: shows, as: 'show', name: 'show-template' }")

        .next
          %p &raquo;

